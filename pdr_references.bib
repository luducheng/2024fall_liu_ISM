@article{Wolfire2022,
  author    = {Wolfire, Mark G. and Vallini, Livia and Chevance, Mélanie},
  title     = {Photodissociation and X-Ray-Dominated Regions},
  journal   = {Annual Review of Astronomy and Astrophysics},
  year      = {2022},
  volume    = {60},
  number    = {Volume 60, 2022},
  pages     = {247-318},
  doi       = {https://doi.org/10.1146/annurev-astro-052920-010254},
  url       = {https://www.annualreviews.org/content/journals/10.1146/annurev-astro-052920-010254},
  publisher = {Annual Reviews},
